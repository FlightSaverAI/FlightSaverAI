{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "flight-saver",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "projects/flight-saver/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-architects/native-federation:build",
      "options": {},
      "configurations": {
        "production": {
          "target": "flight-saver:esbuild:production"
        },
        "development": {
          "target": "flight-saver:esbuild:development",
          "dev": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-architects/native-federation:build",
      "options": {
        "target": "flight-saver:serve-original:development",
        "rebuildDelay": 0,
        "dev": true,
        "port": 0
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "flight-saver:build"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ],
        "tsConfig": "projects/flight-saver/tsconfig.spec.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "projects/flight-saver/src/favicon.ico",
          "projects/flight-saver/src/assets",
          "projects/flight-saver/src/manifest.webmanifest"
        ],
        "styles": [
          "projects/flight-saver/src/styles.scss"
        ],
        "scripts": []
      }
    },
    "esbuild": {
      "executor": "@angular-devkit/build-angular:application",
      "options": {
        "outputPath": "dist/flight-saver",
        "index": "projects/flight-saver/src/index.html",
        "browser": "projects/flight-saver/src/main.ts",
        "polyfills": [
          "zone.js",
          "es-module-shims"
        ],
        "tsConfig": "projects/flight-saver/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "projects/flight-saver/src/favicon.ico",
          "projects/flight-saver/src/assets",
          "projects/flight-saver/src/manifest.webmanifest"
        ],
        "styles": [
          "projects/flight-saver/src/styles.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "serviceWorker": "projects/flight-saver/ngsw-config.json"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve-original": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "flight-saver:esbuild:production"
        },
        "development": {
          "buildTarget": "flight-saver:esbuild:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4201
      }
    }
  }
}