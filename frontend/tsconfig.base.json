      "@flight-saver/authentication/models": ["libs/authentication/models/src/index.ts"],
      "@flight-saver/authentication/routes": ["libs/authentication/routes/src/index.ts"],
      "@flight-saver/authentication/ui": ["libs/authentication/ui/src/index.ts"],
      "@flight-saver/authentication/utils": ["libs/authentication/utils/src/index.ts"],
      "@flight-saver/home/features": ["libs/home/features/src/index.ts"],
      "@flight-saver/home/routes": ["libs/home/routes/src/index.ts"],
      "@flight-saver/home/ui": ["libs/home/ui/src/index.ts"],
      "@flight-saver/statistics/features": ["libs/statistics/features/src/index.ts"],
      "@flight-saver/statistics/routes": ["libs/statistics/routes/src/index.ts"],
      "@flight-saver/statistics/ui": ["libs/statistics/ui/src/index.ts"],
      "@global/*": ["apps/global/*"],
      "@shared/ui-components": ["libs/shared/ui-components/src/index.ts"]
